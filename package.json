{
  "name": "@nationalbankbelgium/mdi-ts",
  "private": true,
  "version": "0.0.1-beta.0",
  "scripts": {
    "build": "npm run clean && npm run transform-icons",
    "clean": "npx rimraf ./dist",
    "commit": "cz",
    "generate:changelog" : "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "generate:changelog-recent": "conventional-changelog -p angular | tail -n +3",
    "pack": "npm run prepare-library-metadata && cd dist/ && npm pack && cd ..",
    "postinstall": "husky",
    "prepare-library-metadata": "node clean-package.js",
    "release": "release-it",
    "transform-icons": "svg-to-ts-files"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@deboxsoft/cpx": "^1.5.0",
    "@mdi/svg": "^7.4.47",
    "@nationalbankbelgium/code-style": "^1.11.0",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "cz-customizable": "^7.3.0",
    "husky": "^9.1.7",
    "release-it": "^18.1.2",
    "rimraf": "^6.0.1",
    "svg-to-ts": "^12.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kreuzerk/svg-icon-library-starter.git"
  },
  "keywords": [
    "SVG",
    "icons",
    "library",
    "mdi",
    "typescript"
  ],
  "author": "Nicolas Dujacquier",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kreuzerk/svg-icon-library-starter/issues"
  },
  "homepage": "https://github.com/kreuzerk/svg-icon-library-starter#readme",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  }
}
